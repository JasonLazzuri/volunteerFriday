<h1>Update the <%=@volunteers.name() %> name </h1>

<form action="/volunteer/<%= @volunteers.id() %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename The Volunteer:</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update</button>
</form>
<form action="/volunteer/<%= @volunteers.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Volunteer</button>
</form>
